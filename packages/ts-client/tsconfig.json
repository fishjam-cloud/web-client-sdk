{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2022",
    "jsx": "react-jsx",

    "strict": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,

    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,

    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types",
      "src/**/*",
    ]
  },
  "include": ["src/**/*", "tests/**/*"]
}
