{
  "name": "fishjam-web-sdk",
  "version": "0.4.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/ts-client",
    "packages/react-client",
    "examples/ts-client/*",
    "examples/react-client/*"
  ],
  "packageManager": "yarn@4.3.0",
  "scripts": {
    "build": "npm run build --workspace @fishjam-dev/ts-client && npm run build --workspace @fishjam-dev/react-client",
    "tsc": "yarn workspaces foreach -A -p run tsc",
    "format": "yarn workspaces foreach -A -p run format",
    "format:check": "yarn workspaces foreach -A -p run format:check",
    "lint": "yarn workspaces foreach -A -p run lint",
    "lint:check": "yarn workspaces foreach -A -p run lint:check"
  }
}
